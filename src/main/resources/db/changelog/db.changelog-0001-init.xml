<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.27.xsd">

    <changeSet id="0001-create-documents" author="vp">

        <createTable tableName="documents" remarks="Document catalog metadata">
            <column name="id" type="VARCHAR(64)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(512)">
                <constraints nullable="false"/>
            </column>
            <column name="mime" type="VARCHAR(128)">
                <constraints nullable="false"/>
            </column>
            <column name="size_bytes" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="chunks" type="INT" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
            <column name="embed_model" type="VARCHAR(128)">
                <constraints nullable="false"/>
            </column>
            <column name="added_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="last_indexed_at" type="TIMESTAMP"/>
            <column name="blob_path" type="VARCHAR(1024)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(32)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="documents" indexName="idx_documents_added_at">
            <column name="added_at"/>
        </createIndex>

        <createIndex tableName="documents" indexName="idx_documents_title">
            <column name="title"/>
        </createIndex>

        <rollback>
            <dropTable tableName="documents"/>
        </rollback>
    </changeSet>
</databaseChangeLog>
